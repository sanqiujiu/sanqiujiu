ä¸‹é¢æ˜¯æœªæ”¹è‰¯çš„ä»£ç 

class Solution {
public:
    int reverse(int x) {
        double a,b,c;
        a=x/100;
        b=(x/10)%10;
        c=x%10;
        if(x>=0)
            cout<<c<<b<<a<<endl;
        else
           cout<<"-"<<abs(c)<<abs(b)<<abs(a)<<endl;
    return 0;
    }
};
